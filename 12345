<!-- ISSUE BOOK -->
<div class="section">
<h2><img src="https://cdn-icons-png.flaticon.com/512/3075/3075977.png"> Issue Book</h2>
<input id="issueBookId" placeholder="Book ID">
<input id="issueStudentId" placeholder="Student ID">
<button onclick="issueBook()">Issue</button>
</div>

<!-- RETURN BOOK -->
<div class="section">
<h2><img src="https://cdn-icons-png.flaticon.com/512/1828/1828843.png"> Return Book</h2>
<input id="returnBookId" placeholder="Book ID">
<button onclick="returnBook()">Return</button>
</div>

</div>

<script>
let books = JSON.parse(localStorage.getItem("books")) || {};
let students = JSON.parse(localStorage.getItem("students")) || {};
let issuedBooks = JSON.parse(localStorage.getItem("issuedBooks")) || {};
let issuedCount = JSON.parse(localStorage.getItem("issuedCount")) || 0;
let returnedCount = JSON.parse(localStorage.getItem("returnedCount")) || 0;

function save(){
    localStorage.setItem("books",JSON.stringify(books));
    localStorage.setItem("students",JSON.stringify(students));
    localStorage.setItem("issuedBooks",JSON.stringify(issuedBooks));
    localStorage.setItem("issuedCount",issuedCount);
    localStorage.setItem("returnedCount",returnedCount);
}

function clearInputs(...ids){
    ids.forEach(id=>document.getElementById(id).value="");
}

function addBook(){
    books[bookId.value]={name:bookName.value,author:author.value,quantity:+quantity.value};
    save(); showBooks();
    clearInputs("bookId","bookName","author","quantity");
}

function addStudent(){
    students[studentId.value]=studentName.value;
    save(); clearInputs("studentId","studentName");
}

function issueBook(){
    let b=issueBookId.value, s=issueStudentId.value;
    if(!books[b]||!students[s]||books[b].quantity<=0) return;
    books[b].quantity--;
    issuedBooks[b]={student:s,time:new Date().toLocaleString()};
    issuedCount++;
    save(); showBooks(); updateStats();
    clearInputs("issueBookId","issueStudentId");
}

function returnBook(){
    let b=returnBookId.value;
    if(!issuedBooks[b]) return;
    books[b].quantity++;
    delete issuedBooks[b];
    returnedCount++;
    save(); showBooks(); updateStats();
    clearInputs("returnBookId");
}

function showBooks(){
    booksTable.innerHTML="";
    let total=0;
    for(let id in books){
        total+=books[id].quantity;
        booksTable.innerHTML+=`
        <tr><td>${id}</td><td>${books[id].name}</td>
        <td>${books[id].author}</td><td>${books[id].quantity}</td></tr>`;
    }
    totalBooks.textContent=total;
}

function updateStats(){
    issuedCount.textContent=issuedCount;
    returnedCount.textContent=returnedCount;
}

showBooks();
updateStats();
</script>

