    <div class="stat-box">
        <h3>Total Books</h3>
        <span id="totalBooks">0</span>
    </div>
    <div class="stat-box">
        <h3>Books Issued</h3>
        <span id="issuedCount">0</span>
    </div>
    <div class="stat-box">
        <h3>Books Returned</h3>
        <span id="returnedCount">0</span>
    </div>
